<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TabHost
        android:paddingTop="5dp"
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tv_quit"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:textColor="#0F87FF"
                    android:text="撤销"/>
                <RadioGroup
                    android:id="@+id/rg_menu"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="40dp"
                    android:background="@drawable/blue_soild"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/button1"
                        style="@style/RadioButtonStyle2"
                        android:background="@drawable/selector_tab_bg_left"
                        android:checked="true"
                        android:text="项目" />

                    <RadioButton
                        android:id="@+id/button2"
                        android:background="@drawable/selector_tab_bg_right"
                        style="@style/RadioButtonStyle2"
                        android:text="产品" />


                </RadioGroup>
                <TextView
                    android:id="@+id/tv_certain"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:textSize="18sp"
                    android:paddingRight="10dp"
                    android:textColor="#0F87FF"
                    android:text="确定"/>
            </LinearLayout>


            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >
            </TabWidget>

        </LinearLayout>
    </TabHost>
</LinearLayout>