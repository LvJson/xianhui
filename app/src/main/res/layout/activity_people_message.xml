<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weixin_lianxiren_gray">
    <LinearLayout
        android:background="@color/bar_color"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/black_right_arrow"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:drawablePadding="10dp"
            android:textSize="18dp"
            android:textColor="#fff"
            android:text="返回"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#fff"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="资料"/>
        <TextView
            android:id="@+id/tv_files"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:paddingRight="15dp"
            android:textColor="#fff"
            android:gravity="center|right"
            android:text="订单"/>
    </LinearLayout>
<LinearLayout
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/cus_head"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cus_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:text=""/>
        <TextView
            android:textColor="@color/lcim_common_gray"
            android:id="@+id/cus_grade"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:text=""/>
        <TextView
            android:id="@+id/cus_files_num"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@color/lcim_common_gray"
            android:text=""/>
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/weixin_lianxiren_gray"/>
    <LinearLayout
        android:id="@+id/ll_kefu_manager"
        android:padding="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:gravity="center|left"
            android:text="客服经理"/>
        <TextView
            android:id="@+id/cus_manager"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:gravity="center"
            android:drawableRight="@mipmap/nav_to_message_arrow_dark"
            android:paddingRight="10dp"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>
    <LinearLayout
        android:id="@+id/ll_cards"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:gravity="center|left"
            android:text="她的卡包"/>
        <TextView
            android:id="@+id/cus_cards_num"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:gravity="center"
            android:drawableRight="@mipmap/nav_to_message_arrow_dark"
            android:paddingRight="10dp"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>
    <LinearLayout
        android:id="@+id/tv_consume_record"
        android:padding="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:text="消费记录"/>
        <TextView
            android:id="@+id/cus_record"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:gravity="center"
            android:drawableRight="@mipmap/nav_to_message_arrow_dark"
            android:paddingRight="10dp"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>
    <LinearLayout
        android:id="@+id/ll_plan_project"
        android:padding="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:gravity="center|left"
            android:text="项目计划"/>
        <TextView
            android:id="@+id/cus_plan"
            android:layout_width="0dp"
            android:textSize="16dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:gravity="center"
            android:drawableRight="@mipmap/nav_to_message_arrow_dark"
            android:paddingRight="10dp"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>
    <LinearLayout
        android:id="@+id/ll_yuyue"
        android:padding="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="40dp"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:text="预约信息"/>
        <TextView
            android:id="@+id/cus_order"
            android:textSize="16dp"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:gravity="center"
            android:drawableRight="@mipmap/nav_to_message_arrow_dark"
            android:paddingRight="10dp"
            android:text=""/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>



</LinearLayout>