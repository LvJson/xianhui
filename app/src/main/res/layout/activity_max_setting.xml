<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weixin_lianxiren_gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bar_color">
        <TextView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/black_right_arrow"
            android:gravity="center|left"
            android:paddingLeft="5dp"
            android:drawablePadding="10dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:text="返回"/>
        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="18dp"
            android:text="设置" />
        <TextView
            android:id="@+id/tv_certain"
            android:onClick="submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textSize="18dp"
            android:gravity="center|right"
            android:paddingRight="15dp"
            android:text="确定"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="12sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center|left"
        android:background="@color/weixin_lianxiren_gray"
        android:text="A、B、C 提供了现金、实操、产品的三种推荐档位标准。如果不符合要求,请自定义柱形图高度标准。"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/tv_a"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="50dp"
           android:gravity="center"
           android:textSize="18dp"
           android:background="#ffffff"
           android:text="A档"/>
       <TextView
           android:id="@+id/tv_b"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="50dp"
           android:gravity="center"
           android:textSize="18dp"
           android:background="#ffffff"
           android:text="B档"/>
       <TextView
           android:id="@+id/tv_c"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="50dp"
           android:gravity="center"
           android:textSize="18dp"
           android:background="#ffffff"
           android:text="C档"/>
       <TextView
           android:id="@+id/tv_d"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="50dp"
           android:gravity="center"
           android:textSize="18dp"
           android:background="#ffffff"
           android:text="自定义"/>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/weixin_lianxiren_gray"
        android:layout_height="40dp"
        android:gravity="left|center"
        android:textSize="14sp"
        android:paddingLeft="20dp"
        android:text="K:1000元"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="现金"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content">
            <SeekBar
                android:id="@+id/sb_cash"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.SeekBar.Normal"
                android:scrollbarStyle="outsideInset"
                android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_cash_over"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#80F7F7F7" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_mcash"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="00.0K"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_project"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="现金"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <SeekBar
            android:id="@+id/sb_project"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.SeekBar.Normal"
            android:scrollbarStyle="outsideInset"
            android:layout_gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_project_over"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#80F7F7F7" />

        </FrameLayout>
        <TextView
            android:id="@+id/tv_mproject"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="00.0K"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_product"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="现金"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <SeekBar
            android:id="@+id/sb_product"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            style="@style/Widget.SeekBar.Normal"
            android:scrollbarStyle="outsideInset"
            android:layout_gravity="center_vertical" />
            <TextView
                android:id="@+id/tv_product_over"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#80F7F7F7" />
        </FrameLayout>
        <TextView
            android:id="@+id/tv_mproduct"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="00.0K"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/weixin_lianxiren_gray"
        android:gravity="left|center"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:text="R:倍数，比率 H:小时"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="现金"/>
        <SeekBar
            android:id="@+id/sb_customer"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            style="@style/Widget.SeekBar.Normal"
            android:scrollbarStyle="outsideInset"
            android:layout_gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_mcustomer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="00.0K"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_times"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="现金"/>
        <SeekBar
            android:id="@+id/sb_times"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            style="@style/Widget.SeekBar.Normal"
            android:scrollbarStyle="outsideInset"
            android:layout_gravity="center_vertical" />
        <TextView
            android:id="@+id/tv_mtimes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_height="match_parent"
            android:text="00.0K"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/weixin_lianxiren_gray"/>


</LinearLayout>